/** video item */
.nav_video_items{
    display:flex;
    flex-direction: column;
    justify-content: space-between;
    padding:30rpx;
    border-bottom:2rpx solid #ddd;
    background-color: #ffffff;
    position: relative;
}

.nav_video_items .nav_video{
    text-align:center;
    margin:0 auto;
    overflow: hidden;
    width:600rpx;
    height:400rpx;
}
.nav_video_items .nav_video video{
    display: inline-block;
    max-width:100%;
    height: auto;
    min-width: 70%;
}
.nav_video_items .nav_video image{
    width:100%;
    height:100%;
}

.nav_video_items .video_cont{
    width:100%;
    font-size:26rpx;
    color:#a9a9a9;
    
}
.nav_video_items .video_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_video_items .video_cont .video_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_video_items .video_cont .video_cont_desc{
    font-size: 34rpx;
    line-height:60rpx;
    color:#000;
    margin-bottom:10rpx;
}
.nav_video_items .video_cont .video_cont_auth_type{
    display: -webkit-box;
    -webkit-box-orient: horizontal;
    width: 100%;
}
.nav_video_items .video_cont .video_cont_auth{
    -webkit-box-flex: 1;
    font-size:26rpx;
    color:#d24a58;
}
.nav_video_items .video_cont .video_cont_type{
    -webkit-box-flex: 1;
    font-size:24rpx;
    color:#4a4a4a;
    text-align: right;
}

/** gank item */
.nav_gank_items{
    background-color: white;
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
}

.nav_gank_items .left_img{
    width:170rpx;
    height:158rpx;
}
.nav_gank_items .left_img image{
    width:100%;
    height:100%;
}
.nav_gank_items .content{
    width:500rpx;
    font-size:26rpx;
    color:#a9a9a9;
    
}
.nav_gank_items .content view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_gank_items .content .cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_gank_items .content .cont_desc{
    font-size: 34rpx;
    line-height:60rpx;
    color:#000;
    margin-bottom:10rpx;
}
.nav_gank_items .content .cont_auth_type{
    display: -webkit-box;
    -webkit-box-orient: horizontal;
    width: 400rpx;
}
.nav_gank_items .content .cont_auth{
    -webkit-box-flex: 1;
    font-size:26rpx;
    color:#d24a58;
}
.nav_gank_items .content .cont_type{
    -webkit-box-flex: 1;
    font-size:24rpx;
    color:#4a4a4a;
    text-align: right;
}
