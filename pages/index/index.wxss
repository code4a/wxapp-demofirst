/**index.wxss**/
.userinfo {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo .userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo .userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200rpx;
  height: 200rpx;
}
.audio_info{
  flex: 1;
}
.audio_info .useraudio {
  margin-top: 10rpx;
}

.audio_info .audioCtrl {
  width: 100%;
  height: 140rpx;
  margin-top: 10rpx;
  background: #eee;
  display: flex;  
  flex-direction: row;
  align-items: center;
}

.audio_info .audioCtrl image {
  width: 60rpx;
  height: 60rpx;
}

.page-body-info {
  padding: 5rpx;
}

.audioCtrl .slider {
  width: 350rpx;
}

.play-time {
  font-size: 28rpx;
  width: 400rpx;
  padding: 2rpx 0;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}

.page-body-button {
  width: 60rpx;
  text-align: center;
  padding: 8rpx;
}

.user-experience {
  width: 200rpx;
  height: 45rpx;
  background: #00ff00;
  color: #000;
}