/**index.wxss**/
.main-bg{
    position:absolute;
    top:0;
    left:0;
    z-index:-1;
    height:100%;
    width:100%;
    opacity:0.6;
}
.userinfo {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo .userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo .userinfo-nickname {
  color: #fff;
}

.userwather {
  position:relative;
  color:#fff;
  font-family:"Microsoft Yahei","宋体";
  font-size:32rpx;
  margin-top: 6rpx;
  height: 400rpx;
  width: 100%;
}

.today{
    height:100%;
    width: 100%;
}
.info{
    padding:10rpx;
}
.temp{
    font-size:64rpx;
    text-align:center;
}
.weather-img{
    padding:10rpx;
    text-align:center;
}
.today-img{
    display:inline-block;
    width: 66rpx;
    height: 40rpx;
}
.city{
    margin-left: 20rpx;
    margin-right: auto;
    margin-top:10rpx;
    color: #fff;
    font-size:40rpx;
    text-align:left;
}
.weather{
    font-size:16px;
    text-align:center;
}
.time{
    margin-top: 20rpx;
    position:absolute;
    width:100%;
    font-family:'Yahei light';
}
.today-time{
    padding:4rpx;
    font-size:40rpx;
    text-align:center;
}
.today-date{
    font-size:40rpx;
    text-align:center;
}

.audio_info{
  flex: 1;
}
.audio_info .useraudio {
  margin-top: 10rpx;
}

.audio_info .audioCtrl {
  width: 100%;
  height: 140rpx;
  margin-top: 10rpx;
  background: #eee;
  display: flex;  
  flex-direction: row;
  align-items: center;
}

.audio_info .audioCtrl image {
  width: 60rpx;
  height: 60rpx;
}

.page-body-info {
  padding: 5rpx;
}

.audioCtrl .slider {
  width: 350rpx;
}

.play-time {
  font-size: 28rpx;
  width: 400rpx;
  padding: 2rpx 0;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}

.page-body-button {
  width: 60rpx;
  text-align: center;
  padding: 8rpx;
}

.user-experience {
  width: 200rpx;
  height: 45rpx;
  background: #00ff00;
  color: #000;
}