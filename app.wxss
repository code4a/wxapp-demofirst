/**app.wxss**/

page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: '微软雅黑';
}

.load-more-container {
  display: flex;
  flex-direction: row;
  width: 100%; 
  height: 100rpx;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.load-more-tips {
  font-size: 30rpx;
  color: #999999;
  margin-left: 10rpx
}

.driver {
  height: 3rpx;
  widows: 100%;
  background-color: #cccccc;
}

/* 滚动条 */

.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
}

/* 提示语 */

.tips {
  font-size: 28rpx;
  text-align: center;
  padding: 50rpx;
  color: #ccc;
  display: none;
}

.tips image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.tips image, .tips text {
  vertical-align: middle;
}

/*tip hide*/

.tip_0, .tip_1, tip_2, tip3 {
  display: block;
}
